						.row
							p Logan Barsell - Vocals and Guitar
						.row
							.a2a_kit.a2a_kit_size_32.a2a_default_style.a2a_follow
								a.a2a_button_facebook(data-a2a-follow='LoganBarsell')
								a.a2a_button_instagram(data-a2a-follow='logan_barsell')
								a.a2a_button_snapchat(data-a2a-follow='lbarsell')
				hr
				.matt.row.justify-content-center
					div
						img(src='../static/css/images/aboutus/matt1.jpg')
